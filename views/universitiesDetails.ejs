<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <h3>Name: <span><%= faculty.name %></span></h3>
    <h3>Address: <span><%= faculty.address %></span></h3>
    <h2>Modify Faculty</h2>
    <form action="/modify/<%= faculty._id %>" method="POST">
      <label for="name">Faculty Name:</label>
      <input type="text" id="name" name="name" required />
      <label for="address">Address:</label>
      <input type="text" id="address" name="address" required />
      <select name="university" id="university">
        <% universities.forEach(university => { %>
        <option value="<%= university._id %>"><%= university.name %></option>
        <% }); %>
      </select>
      <input type="submit" value="Modify Faculty" />
    </form>
  </body>
</html>
